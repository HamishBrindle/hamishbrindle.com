{
  "name": "hb-portfolio-2019",
  "version": "1.0.0",
  "description": "Hamish Brindle's portfolio front-end",
  "main": "index.js",
  "author": "Hamish Brindle",
  "license": "ISC",
  "scripts": {
    "dev": "next -p 7777",
    "build": "next build",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch"
  },
  "dependencies": {
    "apollo-boost": "^0.1.28",
    "babel-core": "^6.26.3",
    "babel-plugin-styled-components": "^1.10.0",
    "dev": "^0.1.3",
    "downshift": "^3.2.4",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "moment": "^2.24.0",
    "next": "^8.0.3",
    "next-with-apollo": "^3.3.2",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-adopt": "^0.6.0",
    "react-apollo": "^2.4.1",
    "react-dom": "^16.8.3",
    "react-transition-group": "^2.5.3",
    "styled-components": "^4.1.3",
    "waait": "^1.0.4"
  },
  "devDependencies": {
    "babel-jest": "^24.1.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "casual": "^1.6.0",
    "enzyme-to-json": "^3.3.5",
    "graphql-tools": "^4.0.4",
    "jest": "^24.1.0",
    "jest-transform-graphql": "^2.1.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest",
      "^.+\\.js?$": "babel-jest"
    }
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
